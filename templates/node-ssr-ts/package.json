{
  "name": "basic",
  "version": "1.0.0",
  "main": "Server-dist/server.js",
  "scripts": {
    "start": "npm i && echo 'Configure and run Frontend setup and View/winnetou-ssr setup to start application...'",
    "build-server": "tsc",
    "build-server:watch": "tsc --project tsconfig.json --watch & tsc-alias --project tsconfig.json --watch",
    "serve": "pm2 delete all;pm2 start Server-dist/server.js  --watch;pm2 flush;pm2 logs --raw;",
    "frontend:install": "cd Frontend && npm i",
    "frontend:winnetoujs": "cd Frontend && npm run start:dev",
    "frontend:sass": "cd Frontend && npm run sass:dev",
    "ssr:install": "cd View/winnetou-ssr && npm i",
    "ssr:winnetoujs": "cd View/winnetou-ssr && npm run start:dev",
    "dev": "ts-node server.ts",
    "clean": "rm -rf Server-dist"
  },
  "dependencies": {
    "express": "^5.1.0",
    "pm2": "^6.0.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.0",
    "winnetoujs": "^3.0.1",
    "sass": "^1.89.2",
    "npm-run-all": "^4.1.5"
  }
}
