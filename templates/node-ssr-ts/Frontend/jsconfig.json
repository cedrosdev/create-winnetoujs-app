{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "checkJs": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@libs/*": ["./libs/*"],
      "@strings": ["./src/strings"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
